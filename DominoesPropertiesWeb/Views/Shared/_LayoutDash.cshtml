
<!doctype html>
<html lang="eng">
<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<!-- Links Of CSS File -->
		<link rel="stylesheet" href="~/css/bootstrap.min.css">
		<link rel="stylesheet" href="~/css/owl.theme.default.min.css">
		<link rel="stylesheet" href="~/css/owl.carousel.min.css">
		<link rel="stylesheet" href="~/css/flaticon.css">
		<link rel="stylesheet" href="~/css/remixicon.css">
		<link rel="stylesheet" href="~/css/meanmenu.min.css">
		<link rel="stylesheet" href="~/css/animate.min.css">
		<link rel="stylesheet" href="~/css/magnific-popup.min.css">
		<link rel="stylesheet" href="~/css/dark-mode.css">
		<link rel="stylesheet" href="~/css/style.css">
		<link rel="stylesheet" href="~/css/responsive.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



		<script src="~/js/jquery.min.js"></script>
		<script src="~/js/sweetalert.min.js"></script>
		
		<!-- Favicon -->
		<link rel="icon" type="image/png" href="~/images/favicon.png">
		<!-- Title -->
		<title>@ViewData["Title"] - Dominoes Properties</title>
																				
    </head>
		@using Microsoft.AspNetCore.Http;
		@inject IHttpContextAccessor HttpContextAccessor

		@{
			var Username = @HttpContextAccessor.HttpContext.Session.GetString("ReferenceId");
			var IsSubscribed = @HttpContextAccessor.HttpContext.Session.GetString("IsSubscribed");
			var WalletId = @HttpContextAccessor.HttpContext.Session.GetString("WalletId");
			var Firstname = @HttpContextAccessor.HttpContext.Session.GetString("Firstname");
			var Lastname = @HttpContextAccessor.HttpContext.Session.GetString("Lastname");
			var isAdmin = @HttpContextAccessor.HttpContext.Session.GetString("RoleFK");
			
			var userFullName = string.Format("{0} {1}", Firstname, Lastname);
			if(isAdmin != null && isAdmin != ""){
				userFullName = @HttpContextAccessor.HttpContext.Session.GetString("Email");
			}
		}
		@Html.Hidden("refId", Username)
		@Html.Hidden("isSubcribed", IsSubscribed)
		@Html.Hidden("fullname", userFullName)
		@Html.Hidden("isAdmin", isAdmin)
		@Html.Hidden("createdBy", @HttpContextAccessor.HttpContext.Session.GetString("Email"))
    <body>
		<script>
			$(function(){
				//if($('#refId').val() == "" || $('#refId').val() == null) return location = '/';
			});
		</script>
		<!-- Start Preloader Area -->
		<div class="preloader" id="loader-style">
			<div class="preloader-wrap">
				<span></span>
				<span></span>
				<span></span>
				<span></span>
			</div>
		</div>
		<!-- End Preloader Area -->
		
		<!-- Start Navbar Area --> 
		<div class="navbar-area">
			<div class="mobile-responsive-nav">
				<div class="container">
					<div class="mobile-responsive-menu">
						<div class="logo">
							<a href="index-2.html">
								<img src="~/images/logo.png" class="main-logo" alt="Dominoes logo">
								<img src="~/images/white-logo.png" class="white-logo" alt="Dominoes logo">
							</a>
						</div>
					</div>
				</div>
			</div>

			<div class="desktop-nav">
				<div class="container-fluid">
					<nav class="navbar navbar-expand-md navbar-light">
						<a class="navbar-brand" href="index-2.html">
							<img src="~/images/logo.png" class="main-logo" alt="logo">
							<img src="~/images/white-logo.png" class="white-logo" alt="logo">
						</a>

						<div class="collapse navbar-collapse mean-menu" id="navbarSupportedContent">
							
							<ul class="navbar-nav m-auto">
								<li class="nav-item">
									<a href="/" class="nav-link active">
										Home            
									</a>
								</li>
								<li class="nav-item">
									<a  href="javascript:void(0)" class="nav-link" id="property-link">
										Properties            
									</a>
								</li>
								<li class="nav-item">
									<a href="#" class="nav-link">
										How it works            
									</a>
								</li>

								<li class="nav-item">
									<a href="#" class="nav-link">Contact Us</a>
								</li>
							</ul>

							<div class="others-options style">
								<ul>
									@*<li>
										<a href="my-listings.html" class="wishlist">
											<i class="ri-heart-line"></i>
											<span>0</span>
										</a>
									</li>*@
									<li>
										<div class="dropdown">
											<button type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
												<img src="~/images/agents/agent-1.jpg" alt="Image">
												<span>@userFullName</span>
											</button>
											<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
												<li>
													<a asp-controller="Dashboard" asp-action="Index">
														<i class="ri-dashboard-line"></i>
														Dashboard
													</a>
												</li>
												@if(userFullName != null)
												{
													<li>
														<a asp-controller="Dashboard" asp-action="Profile">
															<i class="ri-user-line"></i>
															My Profile
														</a>
													</li>
												}
												<li>
													<a href="edit-profile.html">
														<i class="ri-settings-2-line"></i>
														Setting
													</a>
												</li>
												<li>
													<a href="javascript:void(0)" class="logout">
														<i class="ri-logout-box-r-line"></i>
														Sign out
													</a>
												</li>
											</ul>
										</div>
									</li>
									
								@*<li>
										<a asp-controller="Home" asp-action="SignIn" class="default-btn">
											Sign In / Sign Up
										</a>
									</li>*@
								</ul>
							</div>
						</div>
					</nav>
				</div>
			</div>

			<!-- Start Dark Mode Area -->
			<div class="switch-wrapper">
				<div class="container-fluid">
					<div class="switch-btn">
						<label>
							<input class="switch" type="checkbox" id="darkSwitch">
							<div>
								<div class="moon">
									<img src="~/images/dark.png" alt="Dominoes logo">
								</div>
								<div class="sun">
									<img src="~/images/light.png" alt="Dominoes logo">
								</div>
							</div>
						</label>
					</div>
				</div>
			</div>
			<!-- End Dark Mode Area -->

			<div class="others-option-for-responsive">
				<div class="container">
					<div class="dot-menu">
						<div class="inner">
							<div class="circle circle-one"></div>
							<div class="circle circle-two"></div>
							<div class="circle circle-three"></div>
						</div>
					</div>
					
					<div class="container">
						<div class="option-inner">
							<div class="others-options justify-content-center d-flex align-items-center">
								<ul>
									<li>
										<a href="my-listings.html" class="wishlist">
											<i class="ri-heart-line"></i>
											<span>0</span>
										</a>
									</li>
									<li>
										<a href="my-account.html" class="login">
											<i class="ri-user-line"></i>
										</a>
									</li>
									<li>
										<a href="add-listing.html" class="default-btn">
											Add Listing
										</a>
									</li>
									<li>
										<form class="search-form">
											<input type="text" class="form-control" placeholder="Search...">
											<button type="submit" class="src-btn">
												<i class="ri-search-line"></i>
											</button>
										</form>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- End Navbar Area -->
		
		<!-- Start Sidebar Area -->
		<div class="dashboard-sidebar-menu">
			<h3>Dominoes Society</h3>

			<ul>
				@if(isAdmin != null && isAdmin != ""){
					<li>
						<a href="/Dashboard" class="active">
							<i class="ri-dashboard-line"></i>
							Dashboard
						</a>
					</li>
					<li>
						<a asp-controller="Property" asp-action="Index">
							<i class="ri-building-2-fill"></i>
							Properties
						</a>
					</li>
					<li>
						<a asp-controller="Investment" asp-action="Index">
							<i class="ri-building-line"></i>
							Investments
						</a>
					</li>
				}else{
					<li>
						<a href="/Dashboard" class="active">
							<i class="ri-dashboard-line"></i>
							Dashboard
						</a>
					</li>
					<li>
						<a asp-controller="Dashboard" asp-action="Profile">
							<i class="ri-user-line"></i>
							My Profile
						</a>
					</li>
					@*<li>
						<a asp-controller="Property" asp-action="Index">
							<i class="ri-user-line"></i>
							Properties
						</a>
					</li>*@
					<li>
						<a asp-controller="Dashboard" asp-action="Investments">
							<i class="ri-building-2-line"></i>
							Investments
						</a>
					</li>
				}
				
			</ul>
		</div>
		<!-- End Sidebar Area -->
	
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

	


		<!-- Start Go Top Area -->
		<div class="go-top">
			<i class="ri-arrow-up-s-fill"></i>
			<i class="ri-arrow-up-s-fill"></i>
		</div>
		<!-- End Go Top Area -->

        <!-- Start signout modal-->
		<div class="modal fade" id="signoutModal" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalToggleLabel">Warning!!!</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body">
						Are you sure you want to logout?
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
						<button type="button" class="btn btn-primary" id="signout">Logout</button>
					</div>
				</div>
			</div>
		</div>
		<!-- End Signout Modal-->

        <!-- Links of JS File -->
        @*<script data-cfasync="false" src="../../cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>*@
		
        <script src="~/js/bootstrap.bundle.min.js"></script>
		<script src="~/js/meanmenu.min.js"></script>
		<script src="~/js/owl.carousel.min.js"></script>
		<script src="~/js/wow.js"></script>
		<script src="~/js/mixitup.min.js"></script>
		<script src="~/js/magnific-popup.min.js"></script>
		<script src="~/js/dark-mode-switch.min.js"></script>
		<script src="~/js/form-validator.min.js"></script>
		<script src="~/js/contact-form-script.js"></script>
		<script src="~/js/ajaxchimp.min.js"></script>
		<script src="~/js/custom.js"></script>
		<script src="~/js/main.js"></script>
		@await RenderSectionAsync("Scripts", required: false)
    </body>
</html>