
@{
    ViewData["Title"] = "Setting";
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}

<style>
	.nav_link{
		color: #d05a15;
		font-size:18px;
	}

	.nav-tabs .nav_link{
		border: 1px solid #d05a15;
	}

	.nav-tabs .nav_link.active{
		border-color: #d05a15 #d05a15 #fff;
	}
	.nav-tabs .nav_link:hover{
		border-color: #d05a15 #d05a15 #fff;
		color:#000;
	}

</style>
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
<!-- Start Dashboard Area -->
<div class="dashboard-area">
	<div class="container-fluid">
		<div class="dashboard-title-wrap">
			<div class="row align-items-center">
				<div class="col-lg-6 col-sm-6">
					<ul class="dashboard-page-title">
						<li>
							<a href="/dashboard">
								Home
							</a>
						</li>

						<li class="active">Settings</li>
					</ul>
				</div>
				<div class="col-lg-6 col-sm-6">
				</div>
			</div>
		</div>

		<div class="add-listing">
			<div class="row">
				<div class="col-md-9 mx-auto">
					<ul class="nav nav-tabs mb-5" id="myTab" role="tablist">
						<li class="nav-item" role="presentation">
							<a class="nav-link nav_link active" id="home-tab" data-bs-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Property Type</a>
						</li>
						<li class="nav-item" role="presentation">
							<a class="nav-link nav_link" id="profile-tab" data-bs-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">User Role</a>
						</li>
						<li class="nav-item" role="presentation">
							<a class="nav-link nav_link" id="contact-tab" data-bs-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Admin User</a>
						</li>
						<li class="nav-item" role="presentation">
							<a class="nav-link nav_link" id="email-tab" data-bs-toggle="tab" href="#email" role="tab" aria-controls="email" aria-selected="false">Onboarding</a>
						</li>
					</ul>
					<div class="tab-content" id="myTabContent">
						<div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
							<a class="default-btn float-end" onclick="typeModal()" href="javascript:void(0)"><i class="fa fa-plus"></i> Property Type</a>
							<table id="example" class="table table-striped table-bordered Table_property" style="width:100%">
								<thead>
									<tr>
										<th>Type Name</th>
										<th>Action</th>
									</tr>
								</thead>
								<tbody></tbody>
							</table>
						</div>
						<div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
							<h3>Admin User Role</h3>
							<table id="Table_role">
								<thead>
									<tr>
										<th>Role Name</th>
										<th>Action</th>
									</tr>
								</thead>
								<tbody></tbody>
							</table>
						</div>
						<div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
							<h3>Admin User</h3>
							<table id="Table_user">
								<thead>
									<tr>
										<th>Email</th>
										<th>Role Name</th>
										<th>Status</th>
										<th>Action</th>
									</tr>
								</thead>
								<tbody></tbody>
							</table>
						</div>
						<div class="tab-pane fade" id="email" role="tabpanel" aria-labelledby="email-tab">
							<h3>Onboarding Email</h3>

							<label>Start Date</label>
							<input class="form-group" id="startDate" type="date" name="startDate" />
							<a class="default-btn float-end" onclick="sendOnboardingEmail()" href="javascript:void(0)">Send Mail</a>
							
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@*property type template*@
<template id="type-template">
	<swal-html>
		<div class="model fadeIn modal-lg">
			<div class="payment w-100">
				<div class="receipt-box">
					<div class="form-group">
						<label>Property Type Name</label>
						<input type="text" class="form-control" name="Property-type-Name" id="property-type-name" required>
					</div>
					<button class="default-btn" type="button" onclick="addPropertyType()">Submit</button>
				</div>

			</div>
		</div>
	</swal-html>
</template>
<!-- End Dashboard Area -->
<script>
	$(() => {
		//$('#Table_property').DataTable();
		//$('#Table_role').DataTable();
		getTypes();
		getNewSubscribers();
		$('#example_wrapper').removeClass('container-fluid');
	})
</script>

